@model Shop
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="mt-5">
            <h2 class="mb-4">Edit Shop Section</h2>
            <div class="mt-3">
                <h4>Current Shop Image</h4>
                <img src="~/assets/image/@Model.Image" width="400" height="300" alt="shop_image" />
            </div>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <form method="post" class="mt-3" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" accept="image/*" class="form-label">Select Image</label>
                    <input asp-for="@Model.ImageFile" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.ImageFile"></span>
                    <hr />
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input asp-for="@Model.Title" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Title"></span>
                    <hr />
                    <label asp-for="@Model.Desc" class="form-label">Desc</label>
                    <input asp-for="@Model.Desc" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Desc"></span>
                    <hr />
                    <label asp-for="@Model.Price" class="form-label">Price</label>
                    <input asp-for="@Model.Price" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Price"></span>
                    <hr />
                    <label asp-for="@Model.Weight" class="form-label">Weight</label>
                    <input asp-for="@Model.Weight" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Weight"></span>
                    <hr />
                    <label asp-for="@Model.SKUCode" class="form-label">SKUCode</label>
                    <input asp-for="@Model.SKUCode" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.SKUCode"></span>
                    <hr />
                    <label asp-for="@Model.TagIds" class="form-label">Tags</label>
                    <select asp-for="@Model.TagIds" class="form-select">
                        @foreach (var tag in ViewBag.Tags)
                        {
                            @if (Model.ShopTags.FirstOrDefault(st => st.TagId == tag.Id) != null)
                            {
                                <option value="@tag.Id" selected>@tag.Name</option>
                            }
                            else
                            {
                                <option value="@tag.Id">@tag.Name</option>
                            }
                        }
                    </select>
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.TagIds"></span>
                    <hr />
                    <label asp-for="@Model.CategoryIds" class="form-label">Categories</label>
                    <select asp-for="@Model.CategoryIds" class="form-select">
                        @foreach (var category in ViewBag.Categories)
                        {
                            @if (Model.ShopCategories.FirstOrDefault(sc => sc.CategoryId == category.Id) != null)
                            {
                                <option value="@category.Id" selected>@category.Name</option>
                            }
                            else
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.CategoryIds"></span>
                    <hr />
                    <label asp-for="@Model.ShopSizeId" class="form-label">Sizes</label>
                    <select asp-for="@Model.ShopSizeId" class="form-select" asp-items="@(new SelectList(ViewBag.ShopSizes, "Id", "Name"))">
                    </select>
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.ShopSizeId"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

}