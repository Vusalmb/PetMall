@model SizeFeature
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="mt-5">
            <h2 class="mb-4">Create Size Feature Section</h2>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <form method="post" class="mt-3" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Name" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Name"></span>
                    <hr />
                    <label asp-for="@Model.Desc" class="form-label">Desc</label>
                    <input asp-for="@Model.Desc" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Desc"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
