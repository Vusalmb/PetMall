@model Employee
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="mt-5">
            <h2 class="mb-4">Create Employees Section</h2>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <form method="post" class="mt-3" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Name" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Name"></span>
                    <hr />
                    <label asp-for="@Model.Specialty" class="form-label">Specialty</label>
                    <input asp-for="@Model.Specialty" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Specialty"></span>
                    <hr />
                    <label asp-for="@Model.Desc" class="form-label">Description</label>
                    <input asp-for="@Model.Desc" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Desc"></span>

                    <hr />
                    <label asp-for="@Model.Phone" class="form-label">Phone</label>
                    <input asp-for="@Model.Phone" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Phone"></span>
                    <hr />
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input asp-for="@Model.Email" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.Email"></span>
                    <hr />
                    <label asp-for="@Model.FacebookIcon" class="form-label">Facebook Icon</label>
                    <input asp-for="@Model.FacebookIcon" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.FacebookIcon"></span>
                    <hr />
                    <label asp-for="@Model.FacebookUrl" class="form-label">Facebook Url</label>
                    <input asp-for="@Model.FacebookUrl" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.FacebookUrl"></span>
                    <hr />
                    <label asp-for="@Model.TweeterIcon" class="form-label">Tweeter Icon</label>
                    <input asp-for="@Model.TweeterIcon" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.TweeterIcon"></span>
                    <hr />
                    <label asp-for="@Model.TweeterUrl" class="form-label">Tweeter Url</label>
                    <input asp-for="@Model.TweeterUrl" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.TweeterUrl"></span>
                    <hr />
                    <label asp-for="@Model.PinterestIcon" class="form-label">Pinterest Icon</label>
                    <input asp-for="@Model.PinterestIcon" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.PinterestIcon"></span>
                    <hr />
                    <label asp-for="@Model.PinterestUrl" class="form-label">Pinterest Url</label>
                    <input asp-for="@Model.PinterestUrl" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.PinterestUrl"></span>
                    <hr />
                    <label asp-for="@Model.InstagramIcon" class="form-label">Instagram Icon</label>
                    <input asp-for="@Model.InstagramIcon" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.InstagramIcon"></span>
                    <hr />
                    <label asp-for="@Model.InstagramUrl" class="form-label">Instagram Url</label>
                    <input asp-for="@Model.InstagramUrl" class="form-control">
                    <span style="display: inline-block; margin-top: 8px;" class="text text-danger" asp-validation-for="@Model.InstagramUrl"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

}