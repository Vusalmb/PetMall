@model OrderVM
@{
    ViewData["Title"] = "Checkout";
    double totalPrice = 0;
}

@section CSS{
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/checkout/">

    <!-- Custom styles for this template -->
    <link href="form-validation.css" rel="stylesheet">
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">3</span>
            </h4>
            <ul class="list-group mb-3">
                @foreach (BasketItem item in Model.BasketItems)
                {
                    { 
                        totalPrice += (item.Shop.Price * item.Count);
                    }
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">@item.Shop.Title</h6>
                            <small class="text-muted">@item.Count</small>
                        </div>
                        <span class="text-muted">$@(item.Shop.Price * item.Count)</span>
                    </li>
                }

                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>$@totalPrice</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Checkout Page</h4>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="FullName">Fullname:</label>
                    <input asp-for="FullName" class="form-control" placeholder="Fullname"><br />
                    <span class="text text-danger" asp-validation-for="FullName"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserName">Username:</label>
                    <input asp-for="UserName" class="form-control" placeholder="Username"><br />
                    <span class="text text-danger" asp-validation-for="UserName"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" class="form-control" placeholder="Email"><br />
                    <span class="text text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address">Address:</label>
                    <input asp-for="Address" class="form-control" placeholder="Address"><br />
                    <span class="text text-danger" asp-validation-for="Address"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Country">Country:</label>
                    <input asp-for="Country" class="form-control" placeholder="Country"><br />
                    <span class="text text-danger" asp-validation-for="Country"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="State">State:</label>
                    <input asp-for="State" class="form-control" placeholder="State"><br />
                    <span class="text text-danger" asp-validation-for="State"></span>
                </div>
                <hr class="mb-4">

                <button class="btn btn-primary btn-lg btn-block" type="submit">Checkout</button>
            </form>
        </div>
    </div>
</div>
<hr />

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

    
