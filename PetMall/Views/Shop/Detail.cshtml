            <div class="related_title">
                <h5>Related Product</h5>
            </div>

            <div class="related_product owl-carousel owl-theme">
                @foreach (var item in ViewBag.ShopOrder)
                {
                    <div class="card">
                        <div class="card_image">
                            <a asp-controller="shop" asp-action="detail" asp-route-id="@item.Id"><img src="~/assets/image/@item.Image" alt="" width="320" height="320"></a>
                            <div class="card_buttons">
                                <span class="button_detail">
                                    <a target="_blank" asp-controller="shop" asp-action="detail" asp-route-id="@item.Id"><i class="fa fa-light fa-eye"></i></a>
                                </span>
                                <span class="button_notify">
                                    <a asp-controller="shop" asp-action="addbasket" asp-route-id="@item.Id"><i class="fa fa-light fa-bag-shopping"></i></a>
                                </span>
                                <span class="button_wishlist">
                                    <a target="_blank" asp-controller="shop" asp-action="wish" asp-route-id="@item.Id"><i class="fa fa-light fa-heart"></i></a>
                                </span>
