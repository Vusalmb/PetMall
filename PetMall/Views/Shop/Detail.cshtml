@model Shop
@{
    ViewData["Title"] = "Detail";
}

<main>
    <section id="search_area">
        <span class="search_input"><input type="search" placeholder="What are you looking for?"></span>
        <button>
            <span class="header_search">Search</span>
            <span class="header_icon"><i class="fa-solid fa-magnifying-glass"></i></span>
        </button>
    </section>

    <section id="shop_detail">
        <div class="shop_detail_container">
            <h4 class="shop_detail_title">Product details</h4>
            <nav class="shop_detail_active">
                <ul>
                    <li><a asp-controller="home" asp-action="index">Home</a></li>
                    <li>Product details</li>
                </ul>
            </nav>
        </div>
    </section>

    <section id="product_detail">
        <div class="product_detail_container">
            <div class="product_detail_image">
                <img src="~/assets/image/@Model.Image" alt="" width="650" height="700">
            </div>

            <div class="product_detail_desc">
                <div class="product_detail_title">
                    <h4>@Model.Title</h4>
                </div>

                <div class="product_detail_price">
                    <span class="price">$@Model.Price</span>
                    <span class="reviews">
                        <i class="fa-solid fa-star-of-david"></i>
                        <i class="fa-solid fa-star-of-david"></i>
                        <i class="fa-solid fa-star-of-david"></i>
                        <i class="fa-solid fa-star-of-david"></i>
                        <i class="fa-solid fa-star-of-david"></i>
                    </span>
                </div>

                <div class="product_detail_text">
                    <p>@Model.Desc</p>
                </div>

                <div class="product_detail_options">
                    <div class="option1">
                        <span class="tag_title">Tags:</span>
                        <span class="tags">
                            @foreach (ShopTag tags in Model.ShopTags)
                            {
                                <span>@tags.Tag.Name,</span>
                            }
                        </span>
                    </div>

                    <div class="option2">
                        <span class="sku_title">Sku:</span>
                        <span class="weight">@Model.SKUCode</span>
                    </div>

                    <div class="option3">
                        <span class="category_title">Category:</span>
                        <span class="category">
                            @foreach (ShopCategory categories in Model.ShopCategories)
                            {
                                <span>@categories.Category.Name,</span>
                            }
                        </span>
                    </div>
                </div>

                <div class="product_detail_size">
                    <div class="size_title">
                        <span>Size: @Model.ShopSize.Name</span><br />
                        <span>Weight: @Model.Weight</span>
                    </div>
                </div>

                <div class="product_detail_notes">
                    <div class="notes_title">
                        <span>Notes:</span>
                    </div>

                    <div class="notes">
                        <form action="" method="post">
                            <textarea name="" id="" cols="30" rows="10" placeholder="Write here your notes for the order"></textarea>
                        </form>
                    </div>
                </div>

                <div class="product_detail_quantity">
                    <div class="quantity_title">
                        <span>Quantity:</span>
                    </div>

                    <div class="quantity_option">
                        <div class="quantity">
                            <span>-</span>
                            <span class="count">1</span>
                            <span>+</span>
                        </div>

                        <div class="add_card">
                            <a asp-controller="shop" asp-action="addbasket" asp-route-id="@Model.Id" style="text-decoration: none; display: flex; justify-content: center; align-items: center; width: 100%; height: 100%; border-radius: 20px; background-color: orange; color: white; font-family: Montserrat, sans-serif; font-weight: bold;" onMouseOver="this.style.backgroundColor='#ff8c00'" onMouseOut="this.style.backgroundColor='orange'"><span>Add To Card</span></a>
                        </div>
                    </div>

                    <div class="product_by">
                        <a href="" style="text-decoration: none; display: flex; justify-content: center; align-items: center; width: 100%; height: 100%; border-radius: 20px; background-color: orange; color: white; font-family: Montserrat, sans-serif; font-weight: bold;" onMouseOver="this.style.backgroundColor='#ff8c00'" onMouseOut="this.style.backgroundColor='orange'"><span>By It Now</span></a>
                    </div>
                </div>

                <div class="product_detail_payment">
                    <div class="payment_title">
                        <span>Guaranted Safe Checkout:</span>
                    </div>

                    <div class="payment_image">
                        <img src="~/assets/image/payment_detail.png" alt="">
                    </div>
                </div>

                <div class="product_detail_contact">
                    <div class="contacts">
                        <div class="share">
                            <span class="share_title">
                                <i class="fa-solid fa-share-nodes"></i>
                                Share:
                            </span>
                            <span class="social">
                                <a href="https://www.facebook.com/vinovatheme">
                                    <i class="fa-brands fa-facebook-f"></i>
                                    <span>Facebook</span>
                                </a>
                                <a href="https://twitter.com/vinovatheme">
                                    <i class="fa-brands fa-twitter"></i>
                                    <span>Tweeter</span>
                                </a>
                                <a href="https://www.pinterest.com/vinovatheme/">
                                    <i class="fa-brands fa-pinterest-p"></i>
                                    <span>Pinterest</span>
                                </a>
                            </span>
                        </div>

                        <div class="shopping_time">
                            <span>
                                <i class="zmdi zmdi-time"></i>
                                Orders ship within 5 to 10 business days.
                            </span>
                        </div>

                        <div class="shopping_truck">
                            <span>
                                <i class="zmdi zmdi-truck"></i>
                                <strong>Hoorey !</strong> This item ships free to the US
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

