@model BlogVM
@{
    ViewData["Title"] = "Detail";
}

<main>
    <section id="search_area">
        <span class="search_input"><input type="search" placeholder="What are you looking for?"></span>
        <button>
            <span class="header_search">Search</span>
            <span class="header_icon"><i class="fa-solid fa-magnifying-glass"></i></span>
        </button>
    </section>

    <section id="blog_detail">
        <div class="blog_detail_container">
            <h4 class="blog_detail_title">Blog Detail</h4>
            <nav class="blog_detail_active">
                <ul>
                    <li><a asp-controller="home" asp-action="index">Home</a></li>
                    <li><a asp-controller="blog" asp-action="index">News</a></li>
                    <li>Blog Detail</li>
                </ul>
            </nav>
        </div>
    </section>

    <section id="blog_detail_info">
        <div class="blog_detail_info_container">
            <div class="blog_detail_info_filter">
                <div class="blog_detail_info_category">
                    <h5>Categories</h5>
                    <ul>
                        <li></li>
                        <li><a asp-controller="blog" asp-action="detail">Chihuahua</a></li>
                        <li><a asp-controller="blog" asp-action="detail">Shiba Inu</a></li>
                        <li><a asp-controller="blog" asp-action="detail">Corgi</a></li>
                        <li><a asp-controller="blog" asp-action="detail">Pug</a></li>
                        <li><a asp-controller="blog" asp-action="detail">Samoyed</a></li>
                    </ul>
                </div>

                <div class="blog_detail_info_post">
                    <div class="post_title">
                        <h5>Recent Post</h5>
                    </div>

                    @foreach (var item in ViewBag.BlogOrder)
                    {
                        <div class="post">
                            <div class="post_image">
                                <a asp-controller="blog" asp-action="detail" asp-route-id="@item.Id"><img src="~/assets/image/@item.Image" alt="" width="130" height="100"></a>
                            </div>

                            <div class="post_desc">
                                <h6><a asp-controller="blog" asp-action="detail" asp-route-id="@item.Id">@item.Title</a></h6>
                                <span><i class="zmdi zmdi-calendar-note"></i>@item.Date.ToString("dd MMMM yyyy")</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="blog_detail_info_main">
                <div class="blog_detail_info_section">
                    <div class="section">
                        <div class="blog_detail_info_image">
                            <img src="~/assets/image/@Model.Blog.Image" alt="">
                        </div>

                        <div class="blog_detail_info_desc">
