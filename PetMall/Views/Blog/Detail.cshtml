                        <div class="blog_detail_info_date">
                            <div class="date">
                                <span><i class="zmdi zmdi-calendar-note"></i>@Model.Blog.Date.ToString("dd MMMM yyyy")</span>
                                <span><i class="zmdi zmdi-account"></i>Vinova Theme</span>
                            </div>

                            <div class="share">
                                <span><i class="zmdi zmdi-share"></i>Share</span>
                                <span><i class="zmdi zmdi-print"></i>Print</span>
                                <div class="share_social">
                                    <span><a target="_blank" href="@Model.Setting.FacebookUrl">@Html.Raw(Model.Setting.FacebookIcon) Facebook</a></span>
                                    <span><a target="_blank" href="@Model.Setting.TweeterUrl">@Html.Raw(Model.Setting.TweeterIcon) Tweeter</a></span>
