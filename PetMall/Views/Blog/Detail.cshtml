                    </div>
                </div>

                <div class="blog_detail_info_related">
                    <div class="related_title">
                        <h4>Related News</h4>
                    </div>

                    <div class="related_info owl-carousel owl-theme">
                        @foreach (var item in ViewBag.BlogOrder)
                        {
                            <div class="blog">
                                <div class="related_image">
                                    <a asp-controller="blog" asp-action="detail" asp-route-id="@item.Id"><img src="~/assets/image/@item.Image" alt=""></a>
                                </div>

                                <div class="related_desc">
                                    <h6><a asp-controller="blog" asp-action="detail" asp-route-id="@item.Id">@item.Title</a></h6>
                                    <p>@Html.Raw(item.Desc)</p>
                                </div>
                            </div>
                        }
